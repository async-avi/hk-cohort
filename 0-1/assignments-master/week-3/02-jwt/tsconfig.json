{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": ["./typings"],
    "outFile": "./dist/combined.js"
  },
  "include": ["./**/*"],
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./dist/**/*" // This is what fixed it!
  ]
}
